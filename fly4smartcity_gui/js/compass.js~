//http://www.rgraph.net/docs/odo.html
	var compass;

        // Create the Odometer. The arguments are: the canvas ID, the minimum, the maximum and the value.
        compass = new RGraph.Compass('cvs-bussola', 0, 10, 0)

            // Configure the Odometer to appear as you want.
            //IMPORTANTE definizione del cerchio in numero
	    .set('needle.type','triangle')//imposto le punte della bussola triangolari
	    .set('tickmarks','off')
            .set('label.area', 30)//larghezza in px dello spazio per i numeri
            //.set('needle.thickness', 3)
		//.set('needle.extra', [[444.3, 'red',65]])//aggiunge un ulteriore indicatore nella posizione,colore,lunghezza in px
		.set('value.text','true')//abilita la text box dentro il altimetro
    	    //.set('gutter.left',5)
		.set('value.units.post',' m')//unita' di misura nella text box
		.set('text.size',11)//dimensione dei numeri


		//.set('needle.type','triangle')//mette gli indicatori triangolari al posto che freccia
		.set('needle.triangle.border','rgba(0,0,0,0)')//mette trasparente i bordi degli indicatori
		.set('title','Compass')//titolo dell'oggetto
		.set('title.size',11)//dimensione del titolo in pt
		.set('zerostart','true')//per impostare l-inizio a zero
		.set('labels',['N','NE','E','SE','S','SW','W','NW'])//imposta manualmente il nome delle label intorno all'altimetro
		
		//.set('green.max','0%')//toglie il verde e il giallo		
		//.set('red.min','0%')//toglie il rosso
		
		//.set('needle.head',false)//toglie le punte delle frecce
		//.set('title.background','black')//colore di background del title
		//shadows		
		.set('shadow.inner','true')//mette ombreggiatura dentro il quadrante
		.set('shadow.inner.offsetx',1)//offret x ombreggiatura
		.set('shadow.inner.offsety',1)//offret x ombreggiatura
		.set('shadow.inner.blur',4)//lunghezza ombreggiatura
		//interactive features
		
		
		//S.set('zoom.factor',10)
		.set('green.color','white')
		.set('yellow.color','white')
		.set('red.color','white')
		//.set('','')
            // Now call the .draw() method to draw the chart.
            .draw();



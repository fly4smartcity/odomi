var variometer = new RGraph.Gauge('cvs3', -10, 10, 0)
                .set('scale.decimals', 0)
                .set('tickmarks.small', 20)//trattini piccoli
                .set('tickmarks.medium',0)
		.set('tickmarks.big',10)
                .set('title.top', 'Variometer')
                .set('title.top.size', 15)
                .set('title.top.pos', 0.20)
                //.set('title.bottom', 'm/s')
                .set('title.bottom.color', '#aaa')
                .set('border.outer', 'Gradient(white:white:white:white:white:white:white:white:white:white:#aaa)')
		//.set('adjustable','true')
		.set('angles.start', RGraph.PI - 2.7475)//angolo in rad di rotaz lato sx
                .set('angles.end', RGraph.TWOPI -0.3925)//angolo in rad di rotaz lato sx
		.set('chart.labels.count',10)//numero di label
		.set('colors.ranges', [[-10,-9.3, 'red'], [-9.3, -8,'orange'], [-8, 8, 'white'], [8, 9.3, 'orange'], [9.3,10,'red']])//setta i colori arancio e rosso al limite dello strumento
		.set('value.text','true')//abilita la text box dentro il altimetro
    	    	.set('value.text.units.post',' m/s')//unita' di misura nella text box
		.set('chart.value.text.y.pos', 0.35)//distanza y della txt box
//.set('chart.value.text.x.pos', 0.6)//distanza x della txt box
		.set('chart.txtbox.scale.decimals',1)
                .draw();


